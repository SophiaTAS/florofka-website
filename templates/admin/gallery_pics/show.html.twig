{% extends 'admin/base_admin.html.twig' %}

{% block title %}GalleryPics{% endblock %}

{% block body %}
<div class="container">
    <h1 class="text-center my-3">GalleryPics</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ gallery_pic.id }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>{{ gallery_pic.category }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ gallery_pic.name }}</td>
            </tr>
            <tr>
                <th>pics</th>
                <td><img class="image-responsive" alt="" src="{{ asset('assets/img/galerie/mini/400x250-' ~ gallery_pic.name ) }}" /></td>
            </tr>
        </tbody>
    </table>

    {{ include('admin/gallery_pics/_delete_form.html.twig') }}

    <a href="{{ path('app_gallery_pics_index') }}" class="btn mt-3 mb-3 ms-3">back to list</a>
</div>
{% endblock %}
