{% extends 'admin/base_admin.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
<div class="container">
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Password</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.password }}</td>
                <td>{{ user.firstname }}</td>
                <td>{{ user.lastname }}</td>
                <td>
                    <a href="{{ path('app_user_crud_show', {'id': user.id}) }}" class="btn btn-sm my-3 mx-3">show</a>
                </td>
                <td>
                    <a href="{{ path('app_user_crud_edit', {'id': user.id}) }}" class="btn btn-sm my-3 mx-3">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {# <a href="{{ path('app_user_crud_new') }}" class="btn my-3 mx-3">Create new</a> #}
</div>
{% endblock %}
